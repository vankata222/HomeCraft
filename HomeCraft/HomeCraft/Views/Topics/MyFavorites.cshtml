@model IEnumerable<HomeCraft.Data.Models.Topic>
@{
    ViewData["Title"] = "My Favorites";
}
<title>@ViewData["Title"]</title>
<div class="container mt-5">
    <div class="d-flex align-items-center mb-4 border-bottom pb-3">
        <i class="bi bi-heart-fill text-danger fs-1 me-3 animate-pulse"></i>
        <h1 class="fw-bold mb-0 text-dark">My Saved Topics</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-4 border border-dashed">
            <i class="bi bi-bookmark-heart text-muted display-1 opacity-25"></i>
            <p class="fs-4 text-secondary mt-3">Your collection is empty.</p>
            <a asp-action="Index" class="btn btn-primary rounded-pill px-5">Start Exploring</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var topic in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden position-relative">
                        @* Remove button *@
                        <div class="position-absolute top-0 end-0 m-2">
                            <form asp-action="ToggleFavorite" method="post">
                                <input type="hidden" name="topicId" value="@topic.Id" />
                                <button type="submit" class="btn btn-danger btn-sm rounded-circle shadow">
                                    <i class="bi bi-x"></i>
                                </button>
                            </form>
                        </div>

                        @if (!string.IsNullOrEmpty(topic.MediaUrl))
                        {
                            <img src="@topic.MediaUrl" class="card-img-top" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@topic.Title</h5>
                            <p class="text-muted small">By @topic.User?.FirstName</p>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <a asp-action="Details" asp-route-id="@topic.Id" class="btn btn-outline-primary w-100 rounded-pill">View Topic</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .animate-pulse {
        animation: pulse 2s infinite;
    }
    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
</style>