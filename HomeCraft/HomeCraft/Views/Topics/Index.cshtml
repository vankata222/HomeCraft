@using Microsoft.AspNetCore.Identity
@using HomeCraft.Data.Models
@using HomeCraft.ViewModels.Topics
@model IEnumerable<TopicIndexViewModel>

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Repair Forum";
    var currentUserId = UserManager.GetUserId(User);
}

<div class="container mt-5">
    <div class="row align-items-center mb-5 border-bottom pb-3">
        <div class="col-md-8">
            <h1 class="fw-bold text-dark mb-0">HomeCraft Community</h1>
            <p class="text-muted">Expert home repair guides shared by the community.</p>
        </div>
        <div class="col-md-4 text-md-end text-start mt-3 mt-md-0">
            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-action="Create" class="btn btn-success btn-lg shadow-sm px-4 rounded-pill">
                    <i class="bi bi-plus-circle-fill me-2"></i>New Topic
                </a>
            }
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrEmpty(item.Topic.MediaUrl))
                    {
                        <img src="@item.Topic.MediaUrl" class="card-img-top" alt="Topic Image" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light text-center py-5 border-bottom">
                            <i class="bi bi-tools text-muted fs-1"></i>
                        </div>
                    }

                    <div class="card-body">
                        <h5 class="card-title fw-bold text-truncate">@item.Topic.Title</h5>
                        <p class="card-text text-secondary">@item.ShortDescription</p>

                        <div class="mt-3 d-flex gap-2">
                            <span class="badge bg-success d-flex align-items-center px-2 py-1">
                                <i class="bi bi-hand-thumbs-up-fill me-1"></i> @item.LikeCount
                            </span>
                            <span class="badge bg-danger d-flex align-items-center px-2 py-1">
                                <i class="bi bi-hand-thumbs-down-fill me-1"></i> @item.DislikeCount
                            </span>
                        </div>
                    </div>

                    <div class="card-footer bg-white border-top-0 pb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@item.Topic.Id" class="btn btn-primary btn-sm px-3 shadow-sm">Read More</a>

                            @if (currentUserId == item.Topic.UserId || User.IsInRole("Admin"))
                            {
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Topic.Id" class="btn btn-sm btn-warning text-white shadow-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Topic.Id" class="btn btn-sm btn-danger shadow-sm">Delete</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>