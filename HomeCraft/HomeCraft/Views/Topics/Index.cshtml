@using Microsoft.AspNetCore.Identity
@using HomeCraft.Data.Models
@using HomeCraft.ViewModels.Topics
@model IEnumerable<TopicIndexViewModel>

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Repair Forum";
    var currentUserId = UserManager.GetUserId(User);
}

<div class="container mt-5">
    <div class="row align-items-center mb-4 pb-3 border-bottom">
        <div class="col-md-8">
            <h1 class="fw-bold text-dark mb-0">HomeCraft Community</h1>
            <p class="text-muted">Expert home repair guides categorized for your convenience.</p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-action="Create" class="btn btn-success btn-lg shadow-sm px-4 rounded-pill">
                    <i class="bi bi-plus-circle-fill me-2"></i>New Topic
                </a>
            }
        </div>
    </div>

    <div class="mb-5">
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <span class="text-muted me-2 small fw-bold text-uppercase">Filter By:</span>

            <a asp-action="Index" asp-route-categoryId=""
               class="btn btn-sm rounded-pill px-3 @(string.IsNullOrEmpty(ViewBag.SelectedCategory) ? "btn-primary shadow" : "btn-outline-secondary")">
                All Guides
            </a>

            @if (ViewBag.Categories != null)
            {
                foreach (var cat in (IEnumerable<Category>)ViewBag.Categories)
                {
                    <a asp-action="Index" asp-route-categoryId="@cat.Id"
                       class="btn btn-sm rounded-pill px-3 @(ViewBag.SelectedCategory == cat.Id ? "btn-primary shadow" : "btn-outline-secondary")">
                        <i class="bi @cat.Icon me-1"></i> @cat.Name
                    </a>
                }
            }
        </div>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-search display-1 text-muted opacity-25"></i>
                <p class="fs-4 text-secondary mt-3">No guides found in this category.</p>
                <a asp-action="Index" class="btn btn-link">View all topics</a>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                bool isFavorited = SignInManager.IsSignedIn(User) &&
                                   item.Topic.Favorites != null &&
                                   item.Topic.Favorites.Any(f => f.UserId == currentUserId);

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden position-relative hover-lift transition">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                                <form asp-action="ToggleFavorite" method="post">
                                    <input type="hidden" name="topicId" value="@item.Topic.Id" />
                                    <button type="submit" class="btn btn-white btn-sm rounded-circle shadow border-0" style="width: 38px; height: 38px;">
                                        <i class="bi @(isFavorited ? "bi-heart-fill text-danger" : "bi-heart text-secondary") fs-5"></i>
                                    </button>
                                </form>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(item.Topic.MediaUrl))
                        {
                            <img src="@item.Topic.MediaUrl" class="card-img-top" alt="Topic Image" style="height: 220px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light text-center py-5 border-bottom" style="height: 220px; display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-tools text-muted display-4"></i>
                            </div>
                        }

                        <div class="card-body p-4">
                            @* --- CATEGORY NAME ON CARD --- *@
                            <div class="mb-2">
                                <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">
                                    <i class="bi @(item.Topic.Category?.Icon ?? "bi-tag") me-1"></i>
                                    @(item.Topic.Category?.Name ?? "General")
                                </span>
                            </div>

                            <h5 class="card-title fw-bold text-dark mb-3">@item.Topic.Title</h5>
                            <p class="card-text text-secondary small mb-4">@item.ShortDescription</p>

                            <div class="d-flex align-items-center gap-3">
                                <span class="text-success small fw-bold">
                                    <i class="bi bi-hand-thumbs-up-fill"></i> @item.LikeCount
                                </span>
                                <span class="text-danger small fw-bold">
                                    <i class="bi bi-hand-thumbs-down-fill"></i> @item.DislikeCount
                                </span>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 p-4 pt-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Details" asp-route-id="@item.Topic.Id" class="btn btn-primary px-4 rounded-pill shadow-sm btn-sm">Read Guide</a>

                                @if (currentUserId == item.Topic.UserId || User.IsInRole("Admin"))
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                            <li><a class="dropdown-item text-warning" asp-action="Edit" asp-route-id="@item.Topic.Id"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Topic.Id"><i class="bi bi-trash me-2"></i>Delete</a></li>
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important;
    }
    .btn-white {
        background-color: white;
        color: #333;
    }
    .btn-white:hover {
        background-color: #f8f9fa;
    }
</style>