@model HomeCraft.ViewModels.Topics.TopicCreateViewModel

@{
    ViewData["Title"] = "Create New Topic";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-success text-white py-4 text-center">
                    <h2 class="fw-bold mb-0">Share Your Knowledge</h2>
                    <p class="mb-0 text-white-50">Help the community by posting a new repair topic</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3"></div>

                        <div class="mb-4">
                            <label asp-for="CategoryId" class="form-label fw-bold">Select Category</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-collection text-success"></i></span>
                                <select asp-for="CategoryId" class="form-select border-start-0"
                                        asp-items="@(ViewBag.Categories as SelectList)">
                                    <option value="">-- Click to choose --</option>
                                </select>
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="e.g., Fixing a Leaky Kitchen Faucet" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MediaUrl" class="form-label fw-bold">Image URL (Optional)</label>
                            <input asp-for="MediaUrl" class="form-control" placeholder="https://image-hosting.com/my-repair.jpg" />
                            <small class="text-muted">Direct link to an image that demonstrates the repair.</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Detailed Instructions</label>
                            <textarea asp-for="Description" class="form-control" rows="8"
                                      placeholder="List the tools needed and step-by-step instructions..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2 justify-content-end border-top pt-4">
                            <a asp-action="Index" class="btn btn-light px-4 rounded-pill">Cancel</a>
                            <button type="submit" class="btn btn-success px-5 rounded-pill shadow-sm">
                                <i class="bi bi-send me-2"></i>Publish Topic
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}