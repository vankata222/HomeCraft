@model HomeCraft.Data.Models.Topic
@using HomeCraft.Data.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = Model.Title;
    var userId = UserManager.GetUserId(User);
    bool isFavorited = Model.Favorites != null && Model.Favorites.Any(f => f.UserId == userId);
    var likes = Model.Votes?.Count(v => v.IsLiked) ?? 0;
    var dislikes = Model.Votes?.Count(v => !v.IsLiked) ?? 0;
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden mb-4">
                @if (!string.IsNullOrEmpty(Model.MediaUrl))
                {
                    <img src="@Model.MediaUrl" class="card-img-top" style="max-height: 500px; object-fit: cover;" alt="Repair Main Image"/>
                }
                @if (User.IsInRole("Admin"))
                {
                    <div class="alert alert-secondary rounded-4 p-4 mt-4">
                        <h6 class="fw-bold">Admin: Re-categorize this topic</h6>
                        <form asp-action="MoveTopic" asp-controller="Topics" method="post" class="d-flex gap-2">
                            <input type="hidden" name="topicId" value="@Model.Id" />
                            <select name="newCategoryId" class="form-select w-auto"
                                    asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                            </select>
                            <button type="submit" class="btn btn-dark">Update Category</button>
                        </form>
                    </div>
                }
                
                <div class="card-body p-5">
                    @* --- METADATA BAR --- *@
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div class="d-flex align-items-center gap-2">
                            @* --- CATEGORY NAME ADDED HERE --- *@
                            <span class="badge bg-success text-white py-2 px-3 rounded-pill">
                                <i class="bi @(Model.Category?.Icon ?? "bi-tag-fill") me-1"></i> 
                                @(Model.Category?.Name ?? "General")
                            </span>
                            
                            <span class="text-muted small">|</span>
                            
                            @* Author *@
                            <span class="text-muted small fw-bold">
                                <i class="bi bi-person-circle me-1"></i> By @(Model.User?.FirstName ?? "HomeCraft Expert")
                            </span>
                            
                            <span class="text-muted small">|</span>
                            
                            <span class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i> @Model.CreatedAt.ToString("MMMM dd, yyyy")
                            </span>
                        </div>

                        @* Heart Toggle *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-action="ToggleFavorite" method="post">
                                <input type="hidden" name="topicId" value="@Model.Id" />
                                <button type="submit" class="btn btn-link p-0 border-0 shadow-none">
                                    <i class="bi @(isFavorited ? "bi-heart-fill text-danger" : "bi-heart text-secondary") fs-1"></i>
                                </button>
                            </form>
                        }
                    </div>

                    <h1 class="display-4 fw-bold text-dark mb-4">@Model.Title</h1>

                    @* --- MAIN DESCRIPTION --- *@
                    <div class="fs-5 text-dark mb-5" style="white-space: pre-line; line-height: 1.8;">
                        @Model.Description
                    </div>

                    @* --- ACTIONS --- *@
                    <div class="d-flex justify-content-between align-items-center border-top pt-4 mb-5">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                            <i class="bi bi-arrow-left me-2"></i>Back to Forum
                        </a>

                        @if (userId == Model.UserId || User.IsInRole("Admin"))
                        {
                            <div class="btn-group shadow-sm">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white px-4">Edit</a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger px-4">Delete</a>
                            </div>
                        }
                    </div>

                    @* --- RATING BOX --- *@
                    <div class="card shadow-sm border-0 rounded-4 bg-light mb-5">
                        <div class="card-body p-4 text-center">
                            <h5 class="fw-bold mb-3">Was this topic helpful?</h5>
                            <div class="d-flex justify-content-center gap-3">
                                <form asp-action="Rate" method="post">
                                    <input type="hidden" name="topicId" value="@Model.Id"/>
                                    <input type="hidden" name="isLiked" value="true"/>
                                    <button type="submit" class="btn btn-success btn-lg px-4 rounded-pill shadow-sm">
                                        <i class="bi bi-hand-thumbs-up-fill me-2"></i> Yes (@likes)
                                    </button>
                                </form>
                                <form asp-action="Rate" method="post">
                                    <input type="hidden" name="topicId" value="@Model.Id"/>
                                    <input type="hidden" name="isLiked" value="false"/>
                                    <button type="submit" class="btn btn-outline-danger btn-lg px-4 rounded-pill shadow-sm">
                                        <i class="bi bi-hand-thumbs-down-fill me-2"></i> No (@dislikes)
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    @* --- COMMENTS SECTION --- *@
                    <div class="card shadow-sm border-0 rounded-4">
                        <div class="card-body p-4 p-md-5">
                            <h4 class="fw-bold mb-4">
                                <i class="bi bi-chat-left-text-fill text-primary me-2"></i>
                                Discussion (@(Model.Comments?.Count ?? 0))
                            </h4>

                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <form asp-action="PostComment" method="post" class="mb-5 bg-white p-3 rounded-3 border">
                                    <input type="hidden" name="topicId" value="@Model.Id"/>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Add a comment</label>
                                        <textarea name="content" class="form-control border-0 bg-light" rows="3" required
                                                  placeholder="Share your experience or ask a question..."></textarea>
                                    </div>
                                    <div class="text-end">
                                        <button type="submit" class="btn btn-primary px-5 rounded-pill shadow-sm">Post Comment</button>
                                    </div>
                                </form>
                            }

                            <div class="comment-feed">
                                @if (Model.Comments != null && Model.Comments.Any())
                                {
                                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                                    {
                                        <div class="d-flex mb-4 p-3 rounded-3">
                                            <div class="flex-shrink-0">
                                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold"
                                                     style="width: 48px; height: 48px;">
                                                    @(!string.IsNullOrEmpty(comment.User?.FirstName) ? comment.User.FirstName[0].ToString().ToUpper() : "U")
                                                </div>
                                            </div>
                                            <div class="ms-3 w-100">
                                                <div class="bg-light p-3 rounded-3 border-start border-primary border-4 shadow-sm">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <h6 class="mb-0 fw-bold text-primary">@comment.User?.FirstName @comment.User?.LastName</h6>
                                                        <small class="text-muted">@comment.CreatedAt.ToString("g")</small>
                                                    </div>
                                                    <p class="mb-0 text-dark">@comment.Content</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
    .transition {
        transition: all 0.3s ease;
    }
</style>