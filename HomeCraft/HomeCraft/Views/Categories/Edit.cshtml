@model HomeCraft.Data.Models.Category

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 rounded-4 p-4">
                <h4 class="fw-bold"><i class="bi bi-pencil-square me-2"></i>Edit Category</h4>
                <hr>
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" required/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Icon" class="form-label fw-bold"></label>
                        <input asp-for="Icon" class="form-control" required/>
                        <small class="text-muted">Preview: <i class="bi @Model.Icon ms-1"></i></small>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100 rounded-pill">Save Changes</button>
                        <a asp-action="Manage" class="btn btn-outline-secondary w-100 rounded-pill">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>